            <s:SurfaceButton Content="Enter ↵" Tag="Enter ↵" Grid.Column="12" Click="Enter_Button" FontSize="18" />
        </Grid>
        <Grid Grid.Row="4" Margin="0,0,6,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
