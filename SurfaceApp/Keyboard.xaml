                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="1.5*" />
            </Grid.ColumnDefinitions>
            <s:SurfaceButton Content="&#8679;" Tag="&#8679;" Click="Button_Click" FontSize="18" />
            <s:SurfaceButton Content="Z" Tag="Z" Grid.Column="1" Click="SurfaceButton_Click" FontSize="18" />
            <s:SurfaceButton Content="X" Tag="X" Grid.Column="2" Click="SurfaceButton_Click" FontSize="18" />
            <s:SurfaceButton Content="C" Tag="C" Grid.Column="3" Click="SurfaceButton_Click" FontSize="18" />
            <s:SurfaceButton Content="V" Tag="V" Grid.Column="4" Click="SurfaceButton_Click" FontSize="18" />
            <s:SurfaceButton Content="B" Tag="B" Grid.Column="5" Click="SurfaceButton_Click" FontSize="18" />
            <s:SurfaceButton Content="N" Tag="N" Grid.Column="6" Click="SurfaceButton_Click" FontSize="18" />
            <s:SurfaceButton Content="M" Tag="M" Grid.Column="7" Click="SurfaceButton_Click" FontSize="18" />
            <s:SurfaceButton Content="," Tag="," Grid.Column="8" Click="SurfaceButton_Click" FontSize="18" />
            <s:SurfaceButton Content="." Tag="." Grid.Column="9" Click="SurfaceButton_Click" FontSize="18" />
            <s:SurfaceButton Content="/" Tag="/" Grid.Column="10" Click="SurfaceButton_Click" FontSize="18" />
            <s:SurfaceButton Content="?" Tag="?" Grid.Column="11" Click="SurfaceButton_Click" FontSize="18" />
            <s:SurfaceButton Content="&#8679;" Tag="&#8679;" Grid.Column="12" Click="Button_Click" FontSize="18" />
        </Grid>
        <Grid Grid.Row="5" Margin="0,0,6,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="9*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="1.5*" />
            </Grid.ColumnDefinitions>
            <s:SurfaceButton Content="Hide" x:Name="Hide1" Tag="Hide" FontSize="12" Click="SurfaceButton_Hide_Click" />
            <s:SurfaceButton Content="Space" x:Name="Spc" Tag="Space" Grid.Column="1" FontSize="12" Click="SurfaceButton_Click_1" Foreground="#50FFFFFF" />
            <s:SurfaceButton Content="←" x:Name="Lar" Tag="←" Grid.Column="2" Click="Caret_Backward" FontSize="18" />
            <s:SurfaceButton Content="→" x:Name="Rar" Tag="→" Grid.Column="3" Click="Caret_Forward" FontSize="18" />
            <s:SurfaceButton Content="Hide" x:Name="Hide2" Tag="Hide" Grid.Column="4" FontSize="12" Click="SurfaceButton_Hide_Click" />
        </Grid>
    </Grid>
</UserControl>
